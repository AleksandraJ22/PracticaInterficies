<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:background="@color/azul_claro"
    android:orientation="vertical"
android:padding="@dimen/margen_pantalla_principal"
    >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/transparente"
           android:layout_gravity="top|center"
            android:fontFamily="@font/montserratbold"
            android:text="@string/bienvenida"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="52dp"
            android:background="@color/transparente"
            android:text="@string/opcion"
            android:textSize="16dp"
         />


        <Button
            android:id="@+id/button5"
            style="@style/boton_actividad1"
            android:onClick="editarComic"
            android:text="@string/editar_existente" />

        <Button
            android:id="@+id/button6"
            style="@style/boton_actividad2"


            android:text="@string/crear_comic" />

</LinearLayout>