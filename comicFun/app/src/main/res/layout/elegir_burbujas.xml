<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro"

    >

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@color/transparente"
        android:text="@string/pantalla_burbujas"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/transparente"
        android:text="@string/burbuja_dialogo"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/transparente"
        android:text="@string/burbuja_grito"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/transparente"
        android:text="@string/burbuja_pensamientos"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/transparente"
        android:text="@string/burbuja_debilidad"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView4" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="372dp"

        android:layout_height="96dp"
        android:layout_marginStart="@dimen/margen_izquierda"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginEnd="@dimen/margen_derecha"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="63dp"
                android:layout_height="64dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/espacio_iz"
                android:layout_weight="1"

                android:src="@drawable/burbuja_dialogo" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/esp_foto_y_foto"
                android:layout_weight="1"
                android:src="@drawable/burbuja_dialogo1" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/esp_foto_y_foto"
                android:layout_weight="1"

                app:srcCompat="@drawable/dialogo3" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/esp_foto_y_foto"
                android:layout_weight="1"

                app:srcCompat="@drawable/dialogo_4" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="372dp"
        android:layout_height="96dp"
        android:layout_marginStart="@dimen/margen_izquierda"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginEnd="@dimen/margen_derecha"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView4"
        android:layout_width="372dp"
        android:layout_height="96dp"
        android:layout_marginStart="@dimen/margen_izquierda"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginEnd="@dimen/margen_derecha"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/espacio_iz"
                android:layout_weight="1"

                app:srcCompat="@drawable/burbuja_pensamiento" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/esp_foto_y_foto"
                android:layout_weight="1"

                app:srcCompat="@drawable/pensamiento2" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="372dp"
        android:layout_height="96dp"
        android:layout_marginStart="@dimen/margen_izquierda"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginEnd="@dimen/margen_derecha"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/espacio_iz"
                android:layout_weight="1"

                app:srcCompat="@drawable/debilidad" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button12"
        style="@style/main_boton"
        android:layout_marginStart="@dimen/btn_margen_dyi"
        android:layout_marginEnd="@dimen/btn_margen_dentro"
        android:onClick="OkBurbuja"
        android:text="@string/okei"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <Button
        android:id="@+id/button13"
        style="@style/main_boton"
        android:layout_marginEnd="@dimen/btn_margen_dyi"
        android:onClick="volverSinSeleccionarburbuja"
        android:text="@string/inicio"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>