<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_claro">


    <HorizontalScrollView
        android:id="@+id/horizontalScroll2"
        android:layout_width="372dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="172dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|start">

            <ImageView
                android:id="@+id/patron_1"
                android:layout_width="78dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="start"

                android:src="@drawable/patron" />

            <ImageView
                android:id="@+id/patron_2"
                android:layout_width="78dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:src="@drawable/patron2"

                />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="78dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"/>


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView

        android:id="@+id/horizontalScroll1"
        android:layout_width="372dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="328dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"


                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:src="@drawable/carretera"

                />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/bosque" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/disco"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/baile" />

            />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScroll3"
        android:layout_width="372dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="484dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center|start"

                app:srcCompat="@drawable/clima_lluvia2" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="100dp"
                android:layout_height="86dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/balcon"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                app:srcCompat="@drawable/tornado"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/color_solido_y_patrong"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="140dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/lista_fondos"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button11"
        style="@style/main_boton"
        android:layout_marginEnd="64dp"

        android:text="@string/inicio"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScroll3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paisaje"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="301dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="@string/clima"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="453dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button10"
       style="@style/main_boton"

        android:text="@string/okei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScroll3"
        app:cornerRadius="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>