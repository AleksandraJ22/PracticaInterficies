<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_principal"
        style="@style/pantalla_camviar_contraseña"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="start"
        android:orientation="vertical"


        >

        <TextView
            android:id="@+id/textView11"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/nueva_contraseña"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/campo_contraseña_nueva"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"

            android:text="@string/astericos" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/repite_contra"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/campo_repetir_contraseña"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/astericos" />

        <!-- <Button
            android:id="@+id/button2"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50px"
            android:layout_marginTop="200px"
            android:layout_marginEnd="50px"
            android:backgroundTint="@color/azul"
            android:gravity="center"
            android:text="@string/aceptar"
            android:textColor="@color/white" />-->

        <Button
            android:id="@+id/button"
            style="@style/boton_tamaño_letra_alternativo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:padding="10dp"
            android:text="@string/aceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword3"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/fondo_pop_ups"

        android:backgroundTint="@color/fondo_pop_ups"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cambios_guardados"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/transparente"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/login"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintVertical_bias="0.362"
            android:background="@color/transparente"/>

        <Button

            android:id="@+id/button15"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/boton_cruz"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.982"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



